{
    "name": "@plurid/pluridoc-app",
    "version": "0.0.12",
    "description": "",
    "keywords": [
        "plurid",
        "document",
        "application"
    ],
    "main": "distribution/pluridoc-app.umd.js",
    "module": "distribution/pluridoc-app.es5.js",
    "typings": "distribution/types/index.d.ts",
    "files": [
        "distribution"
    ],
    "author": "Jan Cavel <caveljan@plurid.com> (https://plurid.com/)",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/pluridoc"
    },
    "license": "MIT",
    "engines": {
        "node": ">=6.0.0"
    },
    "scripts": {
        "prepublishOnly": "yarn build",
        "prebuild": "rimraf distribution",
        "spec": "jest --coverage",
        "spec:watch": "jest --coverage --watch",
        "spec:prod": "npm run lint && npm run spec -- --no-cache",
        "report-coverage": "cat ./coverage/lcov.info | coveralls",
        "typedoc": "typedoc --out documentation --target es6 --theme minimal --mode file source",
        "start": "rollup -c rollup.config.ts -w",
        "build.removeSpecs": "rm -rf `find ./distribution/ -type d -name __specs__`",
        "build.client": "webpack --config webpack.config.js",
        "build.dev": "yarn build.client && tsc --module commonjs && rollup -c rollup.config.ts && yarn build.removeSpecs",
        "build": "yarn build.client && tsc --module commonjs && rollup -c rollup.config.ts && yarn typedoc && yarn build.removeSpecs"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testEnvironment": "node",
        "testRegex": "(/__specs__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "collectCoverageFrom": [
            "source/*.{js,ts}"
        ]
    },
    "dependencies": {
        "@plurid/plurid-react": "^0.1.52",
        "@plurid/plurid-themes": "^0.1.0",
        "@plurid/pluridoc-parser": "^0.0.8",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-redux": "^7.1.3",
        "redux": "^4.0.4",
        "redux-thunk": "^2.3.0",
        "slate": "^0.50.4",
        "slate-react": "^0.50.5",
        "styled-components": "^4.4.1"
    },
    "devDependencies": {
        "@babel/core": "^7.7.4",
        "@babel/preset-react": "^7.7.4",
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.14",
        "@types/react": "^16.9.13",
        "@types/react-dom": "^16.9.4",
        "@types/react-redux": "^7.1.5",
        "@types/slate-react": "^0.22.8",
        "@types/styled-components": "^4.4.0",
        "colors": "^1.4.0",
        "coveralls": "^3.0.9",
        "cross-env": "^6.0.3",
        "css-loader": "^3.2.0",
        "file-loader": "^5.0.2",
        "jest": "^24.9.0",
        "jest-config": "^24.9.0",
        "lodash.camelcase": "^4.3.0",
        "prompt": "^1.0.0",
        "redux-devtools-extension": "^2.13.8",
        "replace-in-file": "^4.2.0",
        "rimraf": "^3.0.0",
        "rollup": "^1.27.6",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-copy": "^3.1.0",
        "rollup-plugin-img": "^1.1.0",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-node-globals": "^1.4.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-peer-deps-external": "^2.2.0",
        "rollup-plugin-postcss": "^2.0.3",
        "rollup-plugin-sourcemaps": "^0.4.2",
        "rollup-plugin-typescript2": "^0.25.2",
        "shelljs": "^0.8.3",
        "style-loader": "^1.0.1",
        "ts-jest": "^24.2.0",
        "ts-loader": "^6.2.1",
        "ts-node": "^8.5.4",
        "tslint": "^5.20.1",
        "tslint-config-standard": "^9.0.0",
        "typedoc": "^0.15.3",
        "typescript": "^3.7.2",
        "url-loader": "^3.0.0",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10"
    }
}
