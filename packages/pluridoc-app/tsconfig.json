{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module":"es2015",
        "lib": ["es6", "dom"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "dist/types",
        "outDir": "dist/lib",
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "react",
            "jest",
            "node"
        ]
    },
    "include": [
        "src"
    ]
}
